<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MenuButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart" tools:ignore="NewApi">12dp</item> <!-- Este para el padding horizontal -->
        <item name="android:paddingEnd" tools:ignore="NewApi">12dp</item> <!-- Este tambiÃ©n para el padding horizontal -->
    </style>
    <style name="AppTheme">EasyFin</style>
    <style name="RoundImage" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Esto asegura que las esquinas sean completamente redondeadas -->
    </style>

</resources>