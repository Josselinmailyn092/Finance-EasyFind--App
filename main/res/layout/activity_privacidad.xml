<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PrivacidadActivity">

    <!-- Top bar with close button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#4EA75D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_close_privacidad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/close"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/tv_privacidad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/privacidad"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Main content area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_close_privacidad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Section 1 -->
        <TextView
            android:id="@+id/tv_section_1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_1_title"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_section_1_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_1_content"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Section 2 -->
        <TextView
            android:id="@+id/tv_section_2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_2_title"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_section_2_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_2_content"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Section 3 -->
        <TextView
            android:id="@+id/tv_section_3_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_3_title"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_section_3_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_3_content"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>




