<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="408dp"
        android:layout_height="700dp"
        android:background="#D9D9D9"
        android:backgroundTint="#ffffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fondolila"
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded"
            android:rotationX="0" />

        <TextView
            android:id="@+id/fondeverde"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:background="@drawable/rounded_green"
            android:rotationX="0" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="325dp"
                android:layout_height="166dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="950dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:srcCompat="@drawable/imagen1" />

            <TextView
                android:id="@+id/EasyFin"
                android:layout_width="369dp"
                android:layout_height="63dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="185dp"
                android:layout_marginBottom="374dp"
                android:backgroundTint="#00F3EFEF"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"
                android:text="EasyFin"
                android:textColor="#FFFFFF"
                android:textSize="38sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.612"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="-45dp">

                <EditText
                    android:id="@+id/usuario"
                    android:layout_width="266dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="311dp"
                    android:background="@drawable/rounded_white"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:hint="Usuario"
                    android:inputType="text"
                    android:rotationX="0"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/contraseña"
                    android:layout_width="266dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_white"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:rotationX="0"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/Iniciar"
                    android:layout_width="173dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/rounded_verde"
                    android:gravity="center"
                    android:text="Iniciar Sesión"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/noCuenta"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#007A7575"
                        android:ems="10"
                        android:text="¿No tienes cuenta? "
                        android:textColor="#717171"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Registro"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#007A7575"
                        android:clickable="true"
                        android:ems="10"
                        android:text="Registrarse"
                        android:textColor="#3C873F"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/sin_cuenta"
                android:layout_width="205dp"
                android:layout_height="22dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="#007A7575"
                android:ems="10"
                android:text="Acceder sin tener cuenta "
                android:textColor="#044D0B"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
